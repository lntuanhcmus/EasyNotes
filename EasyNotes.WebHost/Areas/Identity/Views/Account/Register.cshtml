@model EasyNotes.WebHost.Areas.Identity.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section head {
    <link href="/css/Account/identity-register.css" rel="stylesheet" />
}


<div class="register-container">
    <form class="form-register" asp-controller="account" asp-action="register" method="post">
        <header class="form-register__header">
            <h3 class="form-register__header-title">Register</h3>
            <p class="form-register__header-subtitle">Create your account. It's free and only takes a minute.</p>
        </header>
        
        <div class="form-register__content">
            @Html.ValidationMessage("RegisterError", new { @class = "register-error" })
            <div class="form-register__content-item fullname">
                <div class="register-firstname">
                    <input type="text" placeholder="First Name" asp-for="FirstName" name="FirstName" />
                    <span asp-validation-for="FirstName" class="text-validation"></span>
                </div>
                <div class="register-lastname">
                    <input type="text" placeholder="Last Name" asp-for="LastName" name="LastName" />
                    <span asp-validation-for="LastName" class="text-validation"></span>
                </div>
            </div>
            <div class="form-register__content-item">
                <input type="text" placeholder="Username" asp-for="Username" name="Username" />
                <span asp-validation-for="Username" class="text-validation"></span>
            </div>
            <div class="form-register__content-item">
                <input type="password" placeholder="Password" asp-for="Password" name="Password" />
                <span asp-validation-for="Password" class="text-validation"></span>
            </div>
            <div class="form-register__content-item">
                <input type="password" placeholder="Confirm Password" asp-for="ConfirmPassword" name="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-validation"></span>
            </div>
            <button type="submit" class="form-register__content-button">Register Now</button>
            <p class="form-register__content-login">Already have an account? <a href="/identity/account/login">Sign in</a></p>
        </div>
    </form>
</div>

