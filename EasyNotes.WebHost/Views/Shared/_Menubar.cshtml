@inject SignInManager<AppUser> signInManager

    <header>
        <div class="navbar">
            <div class="navbar__logo">
                <h2><span class="navbar__logo-text ">Easy</span><span class="navbar__logo-text navbar__logo-text--danger">Notes</span></h2>
            </div>
            @if (!signInManager.IsSignedIn(User))
            {
                <ul class="navbar__menu">
                    <li class="navbar__menu-item"><a class="navbar-button--link" asp-area="identity" asp-controller="account" asp-action="register">Sign Up</a></li>
                    <li class="navbar__menu-item"><a class="navbar-button--link" asp-action="login" asp-area="identity" asp-controller="account">Login</a></li>
                </ul>
            }
            else
            {
                <ul class="navbar__menu">
                    <li class="navbar__menu-account">
                        <a class="user-shortcut" onclick="webApp.page.navbarMenu.showAccount()">@User.Identity.Name<i class="fas fa-user"></i></a>
                        <div id="notify" class="user-notification">
                            <div class="user-notification__profile-item user-notification__profile-item--link">
                                <i class="fa-solid fa-users-rectangle"></i>
                                <a href="/Settings/UserManagement/Info" class="profile-text">
                                    <h3>My profile</h3>
                                    <p>Account setting and more</p>
                                </a>
                            </div>
                            <div class="user-notification__profile-item">
                                <a class="logout" href="/Identity/Account/Logout" type="button">Sign Out</a>
                            </div>
                        </div>
                    </li>
                    @*<li class="navbar__menu-item"><a asp-action="logout" asp-area="identity" asp-controller="account">Logout</a></li>*@
                </ul>
            }
        </div>
    </header>

   